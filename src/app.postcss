@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	* {
		min-width: 0;
	}

	html,
	body {
		@apply relative flex flex-col w-full h-full
			bg-gray-100 dark:bg-gray-900
			text-gray-950 dark:text-white overflow-hidden;
	}

	input,
	select,
	textarea {
		@apply px-3 py-1
			text-sm text-gray-950 dark:text-white
			bg-gray-100 dark:bg-gray-700
			border border-gray-300 dark:border-gray-900
			outline-none focus:outline-none;
	}
	select {
		-webkit-appearance: none;
		-moz-appearance: none;
		appearance: none;
		background-repeat: no-repeat;
		background-position: right 0px top 50%;
		background-size: 24px;
		background-image: url(data:image/svg+xml;base64,);
		@apply pe-6;
	}
	input[disabled],
	select[disabled],
	textarea[disabled] {
		@apply opacity-50 cursor-not-allowed;
	}
	input[type='checkbox'] {
		@apply my-1 me-1 ms-0 h-8 w-8 cursor-pointer text-gray-950 accent-blue-500;
	}
	textarea {
		@apply resize-y;
	}

	input.invalid,
	select.invalid,
	textarea.invalid {
		@apply border-red-600 placeholder-red-600;
	}
	input.valid,
	select.valid,
	textarea.valid {
		@apply border-green-600 placeholder-green-600;
	}
	input.warning,
	select.warning,
	textarea.warning {
		@apply border-orange-600 placeholder-orange-600;
	}
	input.untested,
	select.untested,
	textarea.untested {
		@apply border-gray-600 placeholder-gray-600;
	}

	h1 {
		@apply text-5xl;
	}
	h2 {
		@apply text-4xl;
	}
	h3 {
		@apply text-3xl;
	}
	h4 {
		@apply text-2xl;
	}
	h5 {
		@apply text-xl;
	}
	h6 {
		@apply text-lg;
	}

	a {
		@apply no-underline text-blue-500 dark:text-blue-300;
	}
	a:visited {
		@apply no-underline text-blue-700 dark:text-blue-500;
	}
	a.default {
		@apply text-gray-950 dark:text-white no-underline;
	}
}

@layer components {
	.btn {
		@apply px-3 py-1 text-center
      border border-transparent
			text-sm no-underline font-bold uppercase
			outline-none focus:outline-none
			ease-linear transition-all duration-150 cursor-pointer;
	}
	.btn[disabled] {
		@apply opacity-50 cursor-not-allowed;
	}
	.btn.primary {
		@apply bg-blue-500 !text-white hover:bg-blue-700;
	}
	.btn.primary.active {
		@apply bg-blue-700;
	}
	.btn.secondary {
		@apply bg-white !text-gray-950 hover:bg-gray-200;
	}
	.btn.secondary.active {
		@apply bg-gray-200;
	}
	.btn.danger {
		@apply bg-red-500 !text-white hover:bg-red-700;
	}
	.btn.danger.active {
		@apply bg-red-700;
	}
	.btn.sm {
		@apply text-xs;
	}
	.btn.icon {
		@apply p-1;
	}
	.btn.borderless {
		@apply border-none shadow-none;
	}

	.badge {
		@apply text-xs font-medium px-2 py-1 flex flex-row flex-shrink items-center content-center;
	}
	.badge .btn {
		@apply p-0;
	}

	.badge.gray {
		@apply bg-gray-300 text-gray-900;
	}
	.badge.green {
		@apply bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300;
	}
	.badge.blue {
		@apply bg-mulberry-wood-100 text-mulberry-wood-900 dark:bg-blue-900 dark:text-mulberry-wood-300;
	}
	.badge.yellow {
		@apply bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300;
	}
	.badge.orange {
		@apply bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300;
	}
	.badge.red {
		@apply bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300;
	}
}
